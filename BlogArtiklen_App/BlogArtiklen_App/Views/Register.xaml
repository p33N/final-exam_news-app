<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:BlogArtiklen_App.ViewModels"
             x:Class="BlogArtiklen_App.Views.Register"
             x:DataType="local:RegisterViewModel">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout 
              Padding="60">

                <Entry Placeholder ="First Name"
				  PlaceholderColor ="#460e56"
				  Text="{Binding user.FirstName}"/>

                <Label Text="{Binding user.FirstName}"
				  TextColor ="#460e56"/>

                <Entry Placeholder ="Last Name"
				  PlaceholderColor ="#460e56"
				  Text="{Binding user.LastName}"/>

                <Entry Placeholder ="Email"
				  PlaceholderColor ="#460e56"
				  Text="{Binding user.Email}"/>

                <Entry Placeholder ="Password"
				   PlaceholderColor ="#460e56"
                   IsPassword="True"
				  Text="{Binding user.Password}"/>

                <Button 
                Text="Add Person"
                FontAttributes="Bold"
                Command="{Binding PostUser}"
                HorizontalOptions="Center" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>